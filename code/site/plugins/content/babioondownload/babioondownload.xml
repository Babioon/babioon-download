  	<license>GNU General Public License version 3</license>
	<authorEmail>contact@babioon.com</authorEmail>
	<authorUrl>http://babioon.com</authorUrl>
 	<version>1.1</version>
  	<description>PLG_CONTENT_BABIOONDOWNLOAD_XML_DESCRIPTION</description> 
	<files>
		<filename plugin="babioondownload">babioondownload.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_babioondownload.ini</language>
		<language tag="en-GB">en-GB.plg_content_babioondownload.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="deleteOnOffTags" type="radio"
					default="1"
					description="PLG_CONTENT_BABIOONDOWNLOAD_DELETEONOFFTAGS_DESC"
					label="PLG_CONTENT_BABIOONDOWNLOAD_DELETEONOFFTAGS_LABEL"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

			<field name="parseContent" type="radio"
					default="1"
					description="PLG_CONTENT_BABIOONDOWNLOAD_PARSECONTENT_DESC"
					label="PLG_CONTENT_BABIOONDOWNLOAD_PARSECONTENT_LABEL"
			>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
			</field>
			</fieldset>
		</fields>
	</config>

</extension>
