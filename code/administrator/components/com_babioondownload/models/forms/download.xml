<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details" >

		<field name="id" type="hidden" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="text" type="text" class="inputbox"
			size="40" label="COM_BABIOONDOWNLOAD_TEXT"
			description="COM_BABIOONDOWNLOAD_TEXT_DESC" required="true" />

		<field name="filename" type="text" class="inputbox"
			size="40" label="COM_BABIOONDOWNLOAD_FILENAME"
			description="COM_BABIOONDOWNLOAD_FILENAME_DESC" required="true" />

		<field name="name" type="text" class="inputbox"
			size="40" label="COM_BABIOONDOWNLOAD_CLICKS"
			description="COM_BABIOONDOWNLOAD_CLICKS_DESC" required="false"/>


		<field name="state" type="list"
			label="JSTATUS" description="COM_BABIOONDOWNLOAD_STATE_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
			
	</fieldset>
</form>
